<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.star.k_pop">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".StartApplication.ApplicationStart"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.GuessStarReverse" />
        <activity
            android:name=".activity.BasicNotice"
            android:label="@string/aboutTitle"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activity.Achievements"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TwoBandsTinder"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GuessStar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GuessBands"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gallery.activity.Gallery"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>